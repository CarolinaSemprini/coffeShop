---
export const prerender = false;
import { Picture } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import {BaseWPSchema} from "@/types";
const url= `${import.meta.env.API_URL}/pages?slug=nosotros`;
const res = await fetch(url);
const json = await res.json();
const data=BaseWPSchema.parse(json[0]);

---


<Layout
    title={data.title.rendered}
    subtitle={data.acf.subtitle}
    bgImage={data.featured_image.full.url}
    
    >
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        <Picture 
            src={data.featured_image.medium_large.url} 
            alt={`Imagen de ${data.title.rendered}`}
            width={data.featured_image.medium_large.width}
            height={data.featured_image.medium_large.height}
            formats={["avif", "webp", "jpg"]}
            
        />
        <div class="text-xl space-y-3 mt-10 lg:mt-0" set:html={data.content.rendered}></div>
    </div>

    

</Layout>

