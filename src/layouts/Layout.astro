---
import { ClientRouter, fade, slide } from "astro:transitions";
import "../styles/global.css";
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/footer.astro"; 

interface Props {
    title: string
    subtitle: string
    bgImage: string
}
const { title,subtitle, bgImage} = Astro.props 
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafetería desde 1939:{title}</title>
    
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&display=swap" rel="stylesheet">
    <ClientRouter/>

    <meta name="description" content="Cafetería desde 1939">            
    <meta name="keywords" content="Café, Cafetería, Tienda de café, Café en grano, Café molido">
    <meta name="author" content="Cafetería desde 1939">     
</head>
<body  style="background-color: var(--color-amber-200);">
    

    <Header
        bgImage={bgImage}
        subtitle={subtitle}
        transition:animate={slide({ duration:".5s"})}
        />

        <slot name="before-main-content>">

        <main 
        class="bg-white p-10 lg:p-20 max-w-7xl mx-auto lg:-mt-20 relative"
       
        >

        <div transition:animate={slide({ duration:"1s"})} >
            <h2 class="text-amber-900 font-black text-center text-4xl pb-10 uppercase after:coffee-icon 
           transition-transform duration-500 hover:scale-110 hover:text-amber-600">
                {title}</h2>
            <slot />
        </div>
            
        </main>

        <slot name="after-main-content">
          
    <Footer/>

</body>
</html>
