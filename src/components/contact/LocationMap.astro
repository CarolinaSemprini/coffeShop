---
import type {Location} from '@/types'

interface Props {
    location:Location
}
const {location} = Astro.props

---
<div>
    <h3 class="text-amber-900 font-black text-center text-2xl uppercase mb-5">Ubicaci√≥n</h3>
        <div id="map" class="h-[500px]"></div>
        <location-data
            data-lat={location.lat}
            data-lng={location.lng}
            data-zoom={location.zoom}
            data-label={location.markers[0].label}
            data-makerLat={location.markers[0].lat}
            data-makerLng={location.markers[0].lng}
        />
</div>
<script>
import L from 'leaflet'
import "leaflet/dist/leaflet.css"
    class LocationData extends HTMLElement{
       connectedCallback(){
            const lat =this.dataset.lat
            const lng =this.dataset.lng
            const zoom =this.dataset.zoom
            const label =this.dataset.label
            const makerLat =this.dataset.makerlat
            const makerLng =this.dataset.makerlng

        if(lat && lng && zoom && label && makerLat && makerLng){
             const map = L.map('map').setView([+lat, +lng], +zoom);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
        L.marker([+makerLat, +makerLng]).addTo(map)
        .bindPopup(label)
        .openPopup()
        }
          
        } 
     }
    customElements.define('location-data', LocationData)
</script>